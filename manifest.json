{
  "manifest_version": 3,
  "name": "ChatGPT RTL Transformer",
  "description":"Through LTR & RTL text directions in a click, improving readability for RTL languages.",
  "version": "1.0",
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": ["activeTab", "scripting"],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
